{
  "compilerOptions": {
    "target": "ES6",
    "module": "NodeNext",
    "outDir": "dist",
    // "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./node_module/@types", "./types"],
    "moduleResolution": "nodenext"
  },
  "include": ["functions/src"]
}
